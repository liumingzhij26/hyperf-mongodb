{
    "name": "lmz/hyperf-mongodb",
    "description": "A mongodb component for hyperf.",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "mongodb",
        "pool"
    ],
    "support": {
    },
    "require": {
        "php": ">=7.2",
        "hyperf/contract": "~2.0.0",
        "hyperf/pool": "~2.0.0",
        "hyperf/utils": "~2.0.0",
        "mongodb/mongodb": "^1.5",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "hyperf/di": "~2.0.0",
        "malukenho/docheader": "^0.1.6",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.0.0",
        "friendsofphp/php-cs-fixer": "^2.9"
    },
    "suggest": {
        "hyperf/di": "Create the MongodbPool via dependency injection."
    },
    "autoload": {
        "psr-4": {
            "Hyperf\\Mongodb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Mongodb\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        },
        "hyperf": {
            "config": "Hyperf\\Mongodb\\ConfigProvider"
        }
    },
    "bin": [
    ],
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit --colors=always"
    }
}
