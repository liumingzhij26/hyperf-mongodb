{
    "name": "lmz/hyperf-mongodb",
    "description": "A mongodb component for hyperf.",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "mongodb",
        "pool"
    ],
    "support": {
    },
    "require": {
        "php": ">=7.3",
        "hyperf/contract": "~2.2.0",
        "hyperf/pool": "~2.2.0",
        "hyperf/utils": "~2.2.0",
        "mongodb/mongodb": "^1.5"
    },
    "suggest": {
        "hyperf/di": "Create the MongodbPool via dependency injection."
    },
    "autoload": {
        "psr-4": {
            "Hyperf\\Mongodb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Mongodb\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.2-dev"
        },
        "hyperf": {
            "config": "Hyperf\\Mongodb\\ConfigProvider"
        }
    },
    "bin": [
    ],
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit --colors=always"
    }
}
